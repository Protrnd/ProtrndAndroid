<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Protrnd" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_grey</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/main_purple</item>
        <item name="colorSecondaryVariant">@color/main_purple</item>
        <item name="colorOnSecondary">@color/bright_pink</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/DMSansTextViewStyle</item>
        <item name="buttonStyle">@style/DMSansButtonStyle</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@transition/explode_transition</item>
        <item name="android:windowExitTransition">@transition/explode_transition</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
    </style>

    <style name="DMSansTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/dmsans_regular</item>
    </style>

    <style name="DMSansButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/dmsans_regular</item>
    </style>

    <style name="BottomSheetTheme" parent="Theme.Protrnd">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_logo</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Theme.Protrnd</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="SettingsToolbarTextAppearance" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/dmsans_medium</item>
        <item name="android:fontFamily">@font/dmsans_medium</item>
        <item name="android:textSize">@dimen/subheading</item>
    </style>

</resources>