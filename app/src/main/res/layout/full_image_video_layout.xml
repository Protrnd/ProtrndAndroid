<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <VideoView
        android:id="@+id/video_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@android:color/black"
        android:fitsSystemWindows="true"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ToggleButton
        android:id="@+id/toggleButton"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/play_pause_btn"
        android:backgroundTint="@color/white"
        android:checked="true"
        android:text=""
        android:textOff=""
        android:textOn=""
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/like_toggle"
        app:layout_constraintStart_toStartOf="@+id/like_toggle" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="@color/main_pink"
        android:progressTint="@color/main_pink"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/seekbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:progressTint="@color/white"
        android:thumbTint="@color/white"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/toggleButton"
        app:layout_constraintEnd_toStartOf="@+id/time_stamp"
        app:layout_constraintStart_toEndOf="@+id/toggleButton"
        app:layout_constraintTop_toTopOf="@+id/toggleButton" />

    <TextView
        android:id="@+id/time_stamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/dmsans_medium"
        android:textColor="@color/white"
        android:textSize="@dimen/label"
        app:layout_constraintBottom_toBottomOf="@+id/toggleButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toggleButton" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/image_full_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/close_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="11dp"
        android:adjustViewBounds="true"
        android:background="@drawable/ripple_bg"
        android:backgroundTint="@android:color/transparent"
        android:clickable="true"
        android:contentDescription="@string/video_player_closer"
        android:focusable="true"
        android:padding="5dp"
        android:src="@drawable/arrow_left_ic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/white" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="11dp"
        android:adjustViewBounds="true"
        android:background="@drawable/ripple_bg"
        android:backgroundTint="@android:color/transparent"
        android:clickable="true"
        android:padding="5dp"
        android:src="@drawable/more_vert_ic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/white" />

    <androidx.appcompat.widget.AppCompatToggleButton
        android:id="@+id/like_toggle"
        android:layout_width="26dp"
        android:layout_height="24dp"
        android:layout_margin="16dp"
        android:background="@drawable/full_image_white_heart_state"
        android:button="@android:color/transparent"
        android:textColor="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/send_text_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:contentDescription="@string/send_text_button"
        android:src="@drawable/forward_ic"
        app:layout_constraintBottom_toBottomOf="@+id/like_toggle"
        app:layout_constraintStart_toEndOf="@+id/like_toggle"
        app:layout_constraintTop_toTopOf="@+id/like_toggle"
        app:tint="@color/white" />

    <TextView
        android:id="@+id/support"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rounded_corners_gradient_50"
        android:drawablePadding="4dp"
        android:elevation="5dp"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="@string/support"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:drawableStartCompat="@drawable/support_ic"
        app:layout_constraintBottom_toBottomOf="@+id/send_text_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/send_text_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>