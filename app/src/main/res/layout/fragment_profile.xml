<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".ui.profile.ProfileFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/profile_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:background="@color/main_purple" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:alpha="0.4"
                        android:background="@drawable/texture_img"
                        android:contentDescription="@string/background_image" />

                    <ImageView
                        android:id="@+id/bgimg"
                        android:scaleType="centerCrop"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/image_container"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="84dp"
                        android:background="@drawable/protrnd_default_profile_ic"
                        android:padding="3dp">

                        <ImageView
                            android:id="@+id/profile_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/round_bg"
                            android:contentDescription="@string/profile_image"
                            app:shapeAppearanceOverlay="@style/Style.App.circleImageView" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:id="@+id/send_money_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/image_container"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/rounded_corners_gradient_50"
                        android:drawablePadding="8dp"
                        android:fontFamily="@font/dm_sans_medium"
                        android:gravity="center_vertical"
                        android:paddingStart="12dp"
                        android:paddingTop="12dp"
                        android:paddingEnd="12dp"
                        android:paddingBottom="12dp"
                        android:text="@string/send_money"
                        android:textColor="@color/white"
                        android:textSize="@dimen/body"
                        app:drawableStartCompat="@drawable/send_fund_white_ic"
                        app:drawableTint="@color/white" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/profile_full_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/dm_sans_bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/heading_2" />

                <TextView
                    android:id="@+id/profile_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/dm_sans"
                    android:textColor="@color/main_grey"
                    android:textSize="@dimen/body" />

                <TextView
                    android:id="@+id/about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/dm_sans"
                    android:textColor="@color/main_purple"
                    android:textSize="@dimen/body" />

                <TextView
                    android:id="@+id/location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:drawablePadding="4dp"
                    android:gravity="center"
                    android:textColor="@color/main_purple"
                    app:drawableStartCompat="@drawable/location_ic" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp">

                    <TextView
                        android:id="@+id/followers_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:drawablePadding="5dp"
                        android:fontFamily="@font/dm_sans"
                        android:gravity="center"
                        android:textColor="#2D264B"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/following_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:drawablePadding="5dp"
                        android:fontFamily="@font/dm_sans"
                        android:gravity="center"
                        android:textColor="#2D264B"
                        android:textSize="18sp" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp">

                    <TextView
                        android:id="@+id/settings_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:background="@drawable/pink_light_outlined_to_deep_filled_selector"
                        android:drawablePadding="5dp"
                        android:fontFamily="@font/dm_sans"
                        android:gravity="center"
                        android:paddingStart="8dp"
                        android:paddingTop="4dp"
                        android:paddingEnd="8dp"
                        android:paddingBottom="4dp"
                        android:text="@string/settings"
                        android:textColor="@color/main_grey"
                        android:textSize="@dimen/body"
                        app:drawableStartCompat="@drawable/round_admin_panel_settings_24"
                        app:drawableTint="@color/main_pink" />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tab_items"
                    style="@style/AppTabLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:tabIndicatorColor="@color/main_pink"
                    app:tabIndicatorHeight="4dp"
                    app:tabSelectedTextColor="@color/black"
                    app:tabTextColor="@color/main_grey" />

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/profile_tabs_pager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.core.widget.NestedScrollView>

        <View
            android:id="@+id/alpha_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.5"
            android:background="#000000"
            android:visibility="gone" />
    </RelativeLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>