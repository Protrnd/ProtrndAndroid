<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".ui.profile.ProfileFragment">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/profile_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="@color/main_purple"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:alpha="0.4"
                    android:background="@drawable/texture_img"
                    android:contentDescription="@string/background_image" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/image_container"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="84dp"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/protrnd_default_profile_ic">
                    <ImageView
                        android:id="@+id/profile_image"
                        app:shapeAppearanceOverlay="@style/Style.App.circleImageView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clipToOutline="true"
                        android:layout_margin="2dp"
                        android:src="@mipmap/ic_launcher"
                        android:background="@drawable/protrnd_default_profile_ic"
                        android:contentDescription="@string/profile_image" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/edit_profile"
                    android:background="@drawable/rect_outlined_black_50"
                    android:drawablePadding="8dp"
                    android:paddingStart="12dp"
                    android:textSize="12sp"
                    android:paddingEnd="12dp"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/dm_sans_medium"
                    android:textColor="@color/black"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:layout_marginEnd="16dp"
                    android:layout_alignBottom="@id/image_container"
                    android:layout_alignParentEnd="true"
                    app:drawableStartCompat="@drawable/edit_ic" />
            </RelativeLayout>

            <TextView
                android:id="@+id/profile_full_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Protrnd"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/dm_sans_bold"
                android:textColor="@color/black"
                android:textSize="@dimen/heading_2" />

            <TextView
                android:id="@+id/profile_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="\@protrnd"
                android:fontFamily="@font/dm_sans"
                android:textColor="@color/main_grey"
                android:textSize="@dimen/body" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/profile_description"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/dm_sans"
                android:textColor="@color/main_purple"
                android:textSize="@dimen/body"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/protrnd_location"
                android:drawablePadding="4dp"
                android:gravity="center"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/main_purple"
                app:drawableStartCompat="@drawable/location_ic" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp">
                <TextView
                    android:id="@+id/followers_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/dm_sans"
                    android:gravity="center"
                    android:textColor="#2D264B"
                    android:textSize="18sp"
                    android:text="546 Followers"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"/>
                <TextView
                    android:id="@+id/following_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/dm_sans"
                    android:gravity="center"
                    android:textColor="#2D264B"
                    android:textSize="18sp"
                    android:text="546 Followers"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tab_items"
                style="@style/AppTabLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:tabSelectedTextColor="@color/black"
                app:tabTextColor="@color/main_grey"
                app:tabIndicatorColor="@color/main_pink"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:tabIndicatorHeight="4dp"/>
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/profile_tabs_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>