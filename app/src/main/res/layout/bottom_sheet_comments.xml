<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bottom_sheet_bg"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="50dp"
        android:layout_height="5dp"
        app:cardCornerRadius="50dp"
        app:cardBackgroundColor="@color/app_blue"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/comments_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/dm_sans_medium"
        android:textColor="@color/app_blue"
        android:layout_marginStart="10dp"
        android:layout_marginTop="@dimen/padding_10"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="15dp"
        android:background="@color/app_background"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/comment_section"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/no_comments_tv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/no_comments"
        android:gravity="center"
        android:textSize="20sp"/>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/padding_10">
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_field"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:boxCornerRadiusBottomEnd="5dp"
            app:boxCornerRadiusTopEnd="5dp"
            app:boxCornerRadiusBottomStart="5dp"
            app:boxCornerRadiusTopStart="5dp"
            app:boxBackgroundColor="#FEFEFE"
            app:boxStrokeWidth="1.5dp"
            app:boxBackgroundMode="outline"
            android:backgroundTint="@color/focused_state_edittext_background"
            app:hintEnabled="false"
            style="@style/TextInputLayoutStyle">
            <EditText
                android:id="@+id/comment_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:textColor="#2D264B"
                android:textSize="15sp"
                android:importantForAutofill="no"
                android:hint="@string/comment" />
        </com.google.android.material.textfield.TextInputLayout>
        <RelativeLayout
            android:id="@+id/send_comment"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="9dp"
            android:background="@drawable/send_comment_btn_bg"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="5dp">
            <TextView
                android:id="@+id/send_comment_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/send"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:gravity="center"
                android:fontFamily="@font/dm_sans_bold"
                android:textColor="@color/pink_dark"
                android:layout_gravity="center" />
        </RelativeLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.appcompat.widget.LinearLayoutCompat>