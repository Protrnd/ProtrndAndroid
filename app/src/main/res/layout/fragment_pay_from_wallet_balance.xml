<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingBottom="24dp"
    tools:context=".ui.payment.PayFromWalletBalanceFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/dm_sans_medium"
        android:text="@string/protrnd_wallet"
        android:textColor="@color/black"
        android:textSize="@dimen/subheading" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rounded_corners_gradient_12"
        android:orientation="vertical"
        android:paddingBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/dm_sans"
            android:text="@string/total_balance"
            android:textColor="@color/lightest_grey"
            android:textSize="@dimen/label" />

        <TextView
            android:id="@+id/total_balance_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:drawablePadding="3dp"
            android:fontFamily="@font/dm_sans_medium"
            android:gravity="center"
            android:text="@string/zero_naira"
            android:textColor="@color/lightest_grey"
            android:textSize="@dimen/heading_1" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <TextView
        android:id="@+id/insufficient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/insufficient_funds"
        android:gravity="center_vertical"
        android:layout_gravity="end"
        android:visibility="gone"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="5dp"
        android:drawablePadding="5dp"
        android:textColor="@color/error"
        app:drawableStartCompat="@drawable/info_ic"
        app:drawableTint="@color/error" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp">
        <TextView
            android:id="@+id/btn_make_payment"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/button_pink_dark_50"
            android:drawablePadding="8dp"
            android:fontFamily="@font/dmsans_medium"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingStart="40dp"
            android:paddingEnd="40dp"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/start_promoting"
            android:textColor="@color/white"
            android:textSize="16sp" />
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:visibility="gone"
            android:indeterminateTint="@color/main_purple"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.appcompat.widget.LinearLayoutCompat>