<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.wallet.send.SendAmountFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/dm_sans_bold"
        android:text="@string/send_money"
        android:textColor="@color/main_pink"
        android:textSize="@dimen/heading_2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/dmsans_medium"
        android:text="@string/how_much_would_you_like_to_send"
        android:textColor="@color/black"
        android:textSize="@dimen/subheading" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/dm_sans_medium"
        android:text="@string/send_amount"
        android:textColor="@color/main_purple"
        android:textSize="@dimen/label" />

    <EditText
        android:id="@+id/amount_input"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:autofillHints="emailAddress"
        android:background="@drawable/input_field_main_purp"
        android:drawableStart="@drawable/naira_ic"
        android:drawablePadding="2dp"
        android:gravity="center_vertical"
        android:hint="@string/_0"
        android:importantForAutofill="yes"
        android:inputType="numberPassword"
        android:labelFor="@+id/email_et"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="#2D264B"
        android:textColorHint="@color/main_grey"
        android:textSize="@dimen/body"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/quick_send_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/pink_light_filled_12"
        android:fontFamily="@font/dm_sans_bold"
        android:gravity="center"
        android:paddingStart="16dp"
        android:paddingTop="12dp"
        android:paddingEnd="16dp"
        android:paddingBottom="12dp"
        android:text="@string/quick_send"
        android:textColor="@color/main_pink"
        android:textSize="@dimen/subheading"
        app:drawableEndCompat="@drawable/arrow_short_right_ic"
        app:drawableStartCompat="@drawable/qr_scan_pink_ic" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/continue_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="36dp"
        android:background="@drawable/button_elevation"
        android:fontFamily="@font/dmsans_medium"
        android:text="@string/continue_text"
        android:textColor="@color/white"
        tools:ignore="DuplicateSpeakableTextCheck" />

</androidx.appcompat.widget.LinearLayoutCompat>