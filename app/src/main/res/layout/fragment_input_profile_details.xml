<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.auth.InputProfileDetailsFragment"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:id="@+id/details_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#2D264B"
        android:textSize="30sp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/dmsans_bold"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/login_here_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login_here"
        android:textColor="#2D264B"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:fontFamily="@font/dm_sans_medium"
            android:textColor="#2D264B"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/name_il"
            android:layout_width="0dp"
            android:layout_height="60dp"
            app:boxCornerRadiusBottomEnd="50dp"
            app:boxCornerRadiusTopEnd="50dp"
            app:boxCornerRadiusBottomStart="50dp"
            app:boxCornerRadiusTopStart="50dp"
            app:boxBackgroundColor="#FEFEFE"
            app:boxStrokeWidth="1.5dp"
            app:boxBackgroundMode="outline"
            android:backgroundTint="@color/focused_state_edittext_background"
            app:hintEnabled="true"
            app:errorEnabled="true"
            android:layout_marginEnd="5dp"
            app:layout_constraintEnd_toStartOf="@id/username_il"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/name_tv"
            style="@style/TextInputLayoutStyle"
            app:hintTextColor="@color/shimmer_color"
            app:startIconDrawable="@drawable/fullname_ic"
            app:startIconTint="@color/focused_state_edittext_outline">
            <EditText
                android:id="@+id/name_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textPersonName"
                android:textColor="#2D264B"
                android:maxLines="1"
                android:textCursorDrawable="@null"
                android:textColorHint="@color/shimmer_color"
                android:importantForAutofill="yes"
                android:labelFor="@id/username_et"
                android:autofillHints="emailAddress"
                tools:ignore="LabelFor" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/username_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/username_with_at"
            android:fontFamily="@font/dm_sans_medium"
            android:textColor="#2D264B"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/username_il"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/username_il"
            android:layout_width="0dp"
            android:layout_height="60dp"
            app:boxCornerRadiusBottomEnd="50dp"
            app:boxCornerRadiusTopEnd="50dp"
            app:boxCornerRadiusBottomStart="50dp"
            app:boxCornerRadiusTopStart="50dp"
            android:layout_marginStart="5dp"
            app:boxBackgroundColor="#FEFEFE"
            app:boxStrokeWidth="1.5dp"
            app:layout_constraintTop_toBottomOf="@id/username_tv"
            app:boxBackgroundMode="outline"
            android:backgroundTint="@color/focused_state_edittext_background"
            app:hintEnabled="true"
            app:errorEnabled="true"
            style="@style/TextInputLayoutStyle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/name_il"
            app:hintTextColor="@color/shimmer_color"
            app:startIconDrawable="@drawable/user_account_ic"
            app:startIconTint="@color/focused_state_edittext_outline">
            <EditText
                android:id="@+id/username_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#2D264B"
                android:maxLength="20"
                android:maxLines="1"
                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890"
                android:inputType="textFilter|textPersonName"
                android:textCursorDrawable="@null"
                android:textColorHint="@color/shimmer_color"
                android:importantForAutofill="yes"
                android:labelFor="@+id/email_et"
                android:autofillHints="emailAddress" />
        </com.google.android.material.textfield.TextInputLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/email_address"
        android:fontFamily="@font/dm_sans_medium"
        android:textColor="#2D264B"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/email_il"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:boxCornerRadiusBottomEnd="50dp"
        app:boxCornerRadiusTopEnd="50dp"
        app:boxCornerRadiusBottomStart="50dp"
        app:boxCornerRadiusTopStart="50dp"
        app:boxBackgroundColor="#FEFEFE"
        app:boxStrokeWidth="1.5dp"
        app:boxBackgroundMode="outline"
        android:backgroundTint="@color/focused_state_edittext_background"
        app:hintEnabled="true"
        app:errorEnabled="true"
        style="@style/TextInputLayoutStyle"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:hintTextColor="@color/shimmer_color"
        app:startIconDrawable="@drawable/mail_ic"
        app:startIconTint="@color/focused_state_edittext_outline">
        <EditText
            android:id="@+id/email_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textEmailAddress"
            android:textColor="#2D264B"
            android:maxLines="1"
            android:textCursorDrawable="@null"
            android:textColorHint="@color/shimmer_color"
            android:importantForAutofill="yes"
            android:labelFor="@+id/email_et"
            android:autofillHints="emailAddress" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/password"
        android:fontFamily="@font/dm_sans_medium"
        android:textColor="#2D264B"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/password_il"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:boxCornerRadiusBottomEnd="50dp"
        app:boxCornerRadiusTopEnd="50dp"
        app:boxCornerRadiusBottomStart="50dp"
        app:boxCornerRadiusTopStart="50dp"
        app:boxStrokeColor="@color/text_input_box_stroke_color"
        app:boxBackgroundColor="#FEFEFE"
        app:boxStrokeWidth="1.5dp"
        app:passwordToggleEnabled="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:passwordToggleTint="@color/focused_state_edittext_outline"
        app:boxBackgroundMode="outline"
        style="@style/TextInputLayoutStyle"
        android:backgroundTint="@color/focused_state_edittext_background"
        app:hintEnabled="true"
        app:startIconDrawable="@drawable/lock_ic"
        app:startIconTint="@color/focused_state_edittext_outline">
        <EditText
            android:id="@+id/password_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPassword"
            android:textColor="#2D264B"
            android:maxLines="1"
            android:textCursorDrawable="@null"
            android:autofillHints="password"/>
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/continue_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/button_elevation"
        android:text="@string/continue_text"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:indeterminateTint="#E02A45"
        android:indeterminate="true"
        android:indeterminateTintMode="src_atop"
        android:visibility="gone"/>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>