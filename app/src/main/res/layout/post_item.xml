<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20dp"
    android:paddingBottom="12dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/profile_details_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/post_owner_image"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:contentDescription="@string/profile_image"
            android:background="@drawable/round_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fullname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/dmsans_medium"
            android:maxLines="1"
            android:textColor="@color/black"
            android:text="@string/protrnd"
            android:drawablePadding="5dp"
            android:textSize="@dimen/body"
            app:layout_constraintBottom_toTopOf="@+id/location"
            app:layout_constraintStart_toEndOf="@+id/post_owner_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="spread"
            app:drawableEndCompat="@drawable/business_badge_ic" />


        <TextView
            android:id="@+id/location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="@string/protrnd_location"
            android:textColor="@color/dark_grey"
            android:fontFamily="@font/dmsans_regular"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/fullname"
            app:layout_constraintTop_toBottomOf="@+id/fullname" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/more_vert_ic"
            android:contentDescription="@string/more"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/images_view_pager"
        android:layout_width="match_parent"
        android:layout_height="375dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:background="@color/light_grey"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@+id/caption_view" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toStartOf="@+id/promote_support"
        app:layout_constraintStart_toEndOf="@+id/buttons_grid"
        app:layout_constraintTop_toTopOf="@+id/buttons_grid"
        app:tabBackground="@drawable/tab_selector"
        app:tabGravity="center"
        app:tabIndicatorHeight="0dp"
        app:tabMaxWidth="15dp" />

    <GridLayout
        android:id="@+id/buttons_grid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        android:columnCount="4"
        android:rowCount="1"
        android:useDefaultMargins="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/images_view_pager">

        <androidx.appcompat.widget.AppCompatToggleButton
            android:id="@+id/like_toggle"
            android:layout_width="26dp"
            android:layout_height="24dp"
            android:background="@drawable/heart_state"
            android:button="@android:color/transparent"
            android:textColor="@android:color/transparent" />

        <ImageView
            android:id="@+id/comment_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:contentDescription="@string/comment_button"
            android:src="@drawable/comment_ic" />

        <ImageView
            android:id="@+id/share_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="2"
            android:contentDescription="@string/share_button"
            android:src="@drawable/share_ic"
            app:tint="@color/main_purple" />

        <ImageView
            android:id="@+id/send_text_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="3"
            android:contentDescription="@string/send_text_button"
            android:src="@drawable/send_text_ic" />
    </GridLayout>

    <TextView
        android:id="@+id/promote_support"
        android:layout_width="107dp"
        android:layout_height="36dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rounded_corners_gradient_50"
        android:drawablePadding="10dp"
        android:elevation="5dp"
        android:gravity="start|center"
        android:paddingStart="10dp"
        android:paddingEnd="0dp"
        android:text="@string/promote"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:drawableStartCompat="@drawable/promote_ic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/images_view_pager" />

    <TextView
        android:id="@+id/likes_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/dm_sans_medium"
        android:textSize="14sp"
        android:text="@string/no_of_trndrs_liked_this_post"
        android:layout_marginStart="16dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/buttons_grid" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:textColor="@color/black"
        android:fontFamily="@font/dm_sans"
        android:textSize="11sp"
        android:text="@string/time_ago"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/likes_count" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/caption_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/profile_details_layout">

        <TextView
            android:id="@+id/caption_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:focusable="true"
            android:fontFamily="@font/dm_sans"
            android:maxLines="3"
            android:text="@string/default_caption"
            android:textColor="@color/main_purple"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/read_more_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/view_more"
            android:textColor="@color/light_grey"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/caption_tv" />
    </androidx.constraintlayout.widget.ConstraintLayout>

