<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.profile.ProfileActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/nav_back_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_10"
                android:background="@drawable/profile_click_background"
                android:orientation="horizontal"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:paddingEnd="@dimen/padding_10"
                android:paddingBottom="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/padding_10"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/close_button"
                    android:src="@drawable/arrow_back_ic"
                    app:tint="@color/black"
                    tools:ignore="TouchTargetSizeCheck" />

                <ImageView
                    android:id="@+id/nav_image"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:contentDescription="@string/profile_image"
                    android:src="@drawable/default_profile_ic" />

                <TextView
                    android:id="@+id/nav_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/padding_10"
                    android:textColor="#2D264B" />
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none">

            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:id="@+id/refresh"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/profile_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:background="@color/main_purple" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:alpha="0.4"
                            android:background="@drawable/texture_img"
                            android:contentDescription="@string/background_image" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/image_container"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="84dp"
                            android:background="@drawable/protrnd_default_profile_ic"
                            android:padding="3dp">

                            <ImageView
                                android:id="@+id/profile_image"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/round_bg"
                                android:contentDescription="@string/profile_image"
                                app:shapeAppearanceOverlay="@style/Style.App.circleImageView" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <TextView
                            android:id="@+id/send_money_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@id/image_container"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="16dp"
                            android:background="@drawable/rounded_corners_gradient_50"
                            android:drawablePadding="8dp"
                            android:fontFamily="@font/dm_sans_medium"
                            android:gravity="center_vertical"
                            android:paddingStart="12dp"
                            android:paddingTop="12dp"
                            android:paddingEnd="12dp"
                            android:paddingBottom="12dp"
                            android:text="@string/send_money"
                            android:textColor="@color/white"
                            android:textSize="@dimen/body"
                            app:drawableStartCompat="@drawable/send_fund_white_ic"
                            app:drawableTint="@color/white" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/profile_full_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/dm_sans_bold"
                        android:textColor="@color/black"
                        android:textSize="@dimen/heading_2" />

                    <TextView
                        android:id="@+id/profile_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:fontFamily="@font/dm_sans"
                        android:textColor="@color/main_grey"
                        android:textSize="@dimen/body" />

                    <TextView
                        android:id="@+id/about"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="16dp"
                        android:fontFamily="@font/dm_sans"
                        android:textColor="@color/main_purple"
                        android:textSize="@dimen/body" />

                    <TextView
                        android:id="@+id/location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:drawablePadding="4dp"
                        android:gravity="center"
                        android:textColor="@color/main_purple"
                        app:drawableStartCompat="@drawable/location_ic" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="8dp">

                        <TextView
                            android:id="@+id/followers_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"
                            android:drawablePadding="5dp"
                            android:fontFamily="@font/dm_sans"
                            android:gravity="center"
                            android:textColor="#2D264B"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/following_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"
                            android:drawablePadding="5dp"
                            android:fontFamily="@font/dm_sans"
                            android:gravity="center"
                            android:textColor="#2D264B"
                            android:textSize="18sp" />
                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ToggleButton
                            android:id="@+id/follow_btn"
                            android:layout_width="100dp"
                            android:layout_height="35dp"
                            android:layout_marginStart="16dp"
                            android:background="@drawable/follow_toggle"
                            android:button="@android:color/transparent"
                            android:fontFamily="@font/dm_sans"
                            android:gravity="center"
                            android:text="@string/settings"
                            android:textAllCaps="false"
                            android:textColor="@color/follow_state_text_color"
                            android:textOff="@string/follow"
                            android:textOn="@string/following"
                            android:textSize="@dimen/body" />

                        <TextView
                            android:id="@+id/message_btn"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="16dp"
                            android:background="@drawable/rect_outlined_black_50"
                            android:gravity="center"
                            android:text="@string/message"
                            android:textColor="@color/black" />
                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/tab_items"
                        style="@style/AppTabLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        app:tabIndicatorColor="@color/main_pink"
                        app:tabIndicatorHeight="4dp"
                        app:tabSelectedTextColor="@color/black"
                        app:tabTextColor="@color/main_grey" />

                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/profile_tabs_pager"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <View
        android:id="@+id/alpha_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.5"
        android:background="#000000"
        android:visibility="gone" />
</androidx.constraintlayout.widget.ConstraintLayout>