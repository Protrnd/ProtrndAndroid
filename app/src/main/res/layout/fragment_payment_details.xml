<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.payment.PaymentDetailsFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/subheading"
        android:textColor="@color/black"
        android:fontFamily="@font/dm_sans_medium"
        android:text="@string/input_payment_details"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/card_holder_name"
        android:layout_marginTop="24dp"
        android:textColor="@color/black"
        android:textSize="@dimen/label"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/holder_name_il"
        style="@style/TextInputLayoutStyleLight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/focused_state_edittext_background"
        app:boxBackgroundColor="#FEFEFE"
        app:boxBackgroundMode="outline"
        android:layout_marginTop="8dp"
        app:boxCornerRadiusBottomEnd="50dp"
        app:boxCornerRadiusBottomStart="50dp"
        app:boxCornerRadiusTopEnd="50dp"
        app:boxCornerRadiusTopStart="50dp"
        app:boxStrokeWidth="1dp"
        app:errorEnabled="true"
        app:hintEnabled="false"
        app:hintTextColor="@color/dark_grey">

        <EditText
            android:id="@+id/city_et"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:autofillHints="name"
            android:importantForAutofill="yes"
            android:inputType="textEmailAddress"
            android:textSize="14sp"
            android:hint="@string/e_g_name"
            android:textColor="#2D264B"
            android:textColorHint="#8E8E8E"
            tools:ignore="SpeakableTextPresentCheck" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/card_number"
        android:textColor="@color/black"
        android:textSize="@dimen/label"/>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/TextInputLayoutStyleLight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/focused_state_edittext_background"
        app:boxBackgroundColor="#FEFEFE"
        app:boxBackgroundMode="outline"
        android:layout_marginTop="8dp"
        app:boxCornerRadiusBottomEnd="50dp"
        app:boxCornerRadiusBottomStart="50dp"
        app:boxCornerRadiusTopEnd="50dp"
        app:boxCornerRadiusTopStart="50dp"
        app:boxStrokeWidth="1dp"
        app:errorEnabled="true"
        app:hintEnabled="false"
        app:hintTextColor="@color/dark_grey">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:autofillHints="creditCardNumber"
            android:importantForAutofill="yes"
            android:inputType="numberDecimal"
            android:textSize="14sp"
            android:hint="@string/e_g_card_no"
            android:textColor="#2D264B"
            android:textColorHint="#8E8E8E"
            tools:ignore="SpeakableTextPresentCheck" />
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/expiry_date"
                android:textColor="@color/black"
                android:textSize="@dimen/label"/>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayoutStyleLight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/focused_state_edittext_background"
                app:boxBackgroundColor="#FEFEFE"
                app:boxBackgroundMode="outline"
                android:layout_marginTop="8dp"
                app:boxCornerRadiusBottomEnd="50dp"
                app:boxCornerRadiusBottomStart="50dp"
                app:boxCornerRadiusTopEnd="50dp"
                app:boxCornerRadiusTopStart="50dp"
                app:boxStrokeWidth="1dp"
                app:errorEnabled="true"
                app:hintEnabled="false"
                app:hintTextColor="@color/dark_grey">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:autofillHints="creditCardExpirationDate"
                    android:importantForAutofill="yes"
                    android:inputType="text"
                    android:maxLength="5"
                    android:textSize="14sp"
                    android:hint="@string/e_g_ex_date"
                    android:textColor="#2D264B"
                    android:textColorHint="#8E8E8E"
                    tools:ignore="SpeakableTextPresentCheck" />
            </com.google.android.material.textfield.TextInputLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cvv_security_code"
                android:textColor="@color/black"
                android:textSize="@dimen/label"/>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/TextInputLayoutStyleLight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/focused_state_edittext_background"
                app:boxBackgroundColor="#FEFEFE"
                app:boxBackgroundMode="outline"
                android:layout_marginTop="8dp"
                app:boxCornerRadiusBottomEnd="50dp"
                app:boxCornerRadiusBottomStart="50dp"
                app:boxCornerRadiusTopEnd="50dp"
                app:boxCornerRadiusTopStart="50dp"
                app:boxStrokeWidth="1dp"
                app:errorEnabled="true"
                app:hintEnabled="false"
                app:hintTextColor="@color/dark_grey">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:autofillHints="creditCardSecurityCode"
                    android:importantForAutofill="yes"
                    android:inputType="numberDecimal"
                    android:textSize="14sp"
                    android:maxLength="3"
                    android:hint="@string/cvv"
                    android:textColor="#2D264B"
                    android:textColorHint="#8E8E8E"
                    tools:ignore="SpeakableTextPresentCheck" />
            </com.google.android.material.textfield.TextInputLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <CheckBox
        android:id="@+id/remember_card_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/remember_card_details"
        android:textColor="@color/black"
        android:checked="true"
        android:buttonTint="@color/main_purple"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/continue_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/dmsans_medium"
        android:background="@drawable/button_elevation"
        android:text="@string/continue_text"
        android:textColor="@color/white"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/secured_by_paystack"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/body"
        android:layout_marginTop="24dp"
        android:drawablePadding="5dp"
        app:drawableStartCompat="@drawable/lock_ic" />
</androidx.appcompat.widget.LinearLayoutCompat>